config UART_HOSTLINK
	bool "ARC HOSTLINK UART driver"
	default y
	depends on ARC
	depends on DT_HAS_SNPS_HOSTLINK_UART_ENABLED
	select SERIAL_HAS_DRIVER
	help
	  This option enables access HOSTLINK channel as UART device.
